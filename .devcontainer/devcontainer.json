{
    "name": "JamboPay Payment Server",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.11",
    "forwardPorts": [8000],
    "portsAttributes": {
        "8000": {
            "label": "JamboPay Payment Portal",
            "onAutoForward": "openPreview"
        }
    },
    "postCreateCommand": "pip3 install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    }
}
